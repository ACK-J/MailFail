{
  "manifest_version": 2,
  "name": "MailFail",
  "version": "1.0.11",
  "description": "Checks for flaws in the email security of the current domain",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
   "icons": {
    "128": "icons/mailfail-128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "128": "icons/mailfail-128x128.png"
    }
  },
  "permissions": ["notifications", "tabs", "storage"]
}

